{
	"name": "forrest79/deploy-php",
	"description": "Simple assets builder and deploy application helper for PHP projects.",
	"keywords": ["deploy", "php"],
	"type": "library",
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Jakub Trmota",
			"email": "jakub@trmota.cz"
		}
	],
	"require": {
		"php": "^8.3",
		"nette/utils": "^4.0",
		"phpseclib/phpseclib": "^3.0"
	},
	"require-dev": {
		"forrest79/phpcs": "^2.3",
		"forrest79/phpcs-ignores": "^0.6",
		"phpstan/phpstan": "^2.1",
		"phpstan/phpstan-strict-rules": "^2.0",
		"shipmonk/phpstan-rules": "^4.2"
	},
	"autoload": {
		"psr-4": {
			"Forrest79\\DeployPhp\\": "src/"
		}
	},
	"scripts": {
		"phpcs": "vendor/bin/phpcs --bootstrap=vendor/forrest79/phpcs-ignores/src/bootstrap-outdated.php -q -s src",
		"phpstan": "vendor/bin/phpstan analyse src"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": false
		}
	}
}
